<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true" >

    <Button
        android:id="@+id/actions_feed"
        style="@style/TamagotchiTheme.Actions.Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tamagotchi_actions_feed" />

    <Button
        android:id="@+id/actions_play"
        style="@style/TamagotchiTheme.Actions.Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tamagotchi_actions_play" />

    <Button
        android:id="@+id/actions_kill"
        style="@style/TamagotchiTheme.Actions.Action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tamagotchi_actions_kill" />

</LinearLayout>